-- Teleport Interface Script with Simplified Coordinates Input

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Crear ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui

-- Crear Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.3, 0, 0.2, 0)
frame.Position = UDim2.new(0.35, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

-- Crear un TextLabel
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0.2, 0)
label.Position = UDim2.new(0, 0, 0, 0)
label.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
label.Text = "Teleport to Coordinates"
label.TextColor3 = Color3.fromRGB(0, 0, 0)
label.Parent = frame

-- Crear TextBoxes para las coordenadas
local xInput = Instance.new("TextBox")
xInput.Size = UDim2.new(0.8, 0, 0.2, 0)
xInput.Position = UDim2.new(0.1, 0, 0.25, 0)
xInput.PlaceholderText = "X Coordinate"
xInput.Parent = frame

local zInput = Instance.new("TextBox")
zInput.Size = UDim2.new(0.8, 0, 0.2, 0)
zInput.Position = UDim2.new(0.1, 0, 0.55, 0)
zInput.PlaceholderText = "Z Coordinate"
zInput.Parent = frame

-- Crear un botón para teletransportar
local teleportButton = Instance.new("TextButton")
teleportButton.Size = UDim2.new(0.8, 0, 0.2, 0)
teleportButton.Position = UDim2.new(0.1, 0, 0.85, 0)
teleportButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
teleportButton.Text = "Teleport"
teleportButton.Parent = frame

-- Función de teletransporte
teleportButton.MouseButton1Click:Connect(function()
    local x = tonumber(xInput.Text)
    local z = tonumber(zInput.Text)

    if x and z then
        local y = 10 -- Establece la coordenada Y a 10
        -- Teletransportar al jugador a las coordenadas ingresadas
        player.Character.HumanoidRootPart.CFrame = CFrame.new(x, y, z)
    else
        -- Mensaje de error si las coordenadas no son válidas
        label.Text = "Invalid coordinates! Try again."
    end
end)

-- Mensaje de cierre (opcional)
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0.3, 0, 0.1, 0)
closeButton.Position = UDim2.new(0.35, 0, 0.95, 0)
closeButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
closeButton.Text = "Close"
closeButton.Parent = frame

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

